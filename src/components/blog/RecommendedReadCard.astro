---
import type { BlogEntry } from "@/types";
import { formatDate } from "@lib/formatDate";
import readingTime from "@lib/readingTime";
import { Image } from "astro:assets";
import defaultImage from "@assets/picture.jpg";
import { slug } from "github-slugger";
import PlaceholderImage from "@components/blog/PlaceholderImage.astro";
import { slugify } from "@lib/textConverter";

interface Props {
  entry: BlogEntry;
  showImage?: boolean; // 是否显示图片
  showReadingTime?: boolean; // 是否显示阅读时间
  compact?: boolean; // 紧凑模式
}

const {
  entry,
  showImage = true,
  showReadingTime = true,
  compact = false,
}: Props = Astro.props;

const { title, createdAt, image, imageAlt } = entry.data;

// 检查是否有自定义图片 - 支持本地图片对象和外部图片URL
const hasLocalImage = !!(image && typeof image === "object" && "src" in image);
const hasExternalImage = !!(image && typeof image === "string");
const hasCustomImage = hasLocalImage || hasExternalImage;
const displayImageAlt = imageAlt || `${title} - 推荐阅读`;

const entryDate = createdAt ? formatDate(createdAt) : null;
const estimatedReadingTime = readingTime(entry.body || "", 1);
---

<div
  class={`group flex p-2 pr-4 items-center gap-3 rounded-[25px] text-txt-p
   hover:bg-orange-500 dark:hover:bg-orange-500 transition-all duration-300 
   border border-transparent hover:border-gray-200/50 dark:hover:border-gray-700/50
    [&_*]:hover:text-darkmode-txt-p`}
>
  <a
    href={`/blog/${entry.id}`}
    class="flex items-center gap-3 w-full no-underline"
  >
    <!-- 左侧图片 -->
    {
      showImage && (
        <div
          class={`flex-shrink-0 rounded-[18px] overflow-hidden ${compact ? "w-14 h-14" : "w-16 h-16"}  block lg:hidden 2xl:block`}
        >
          {hasCustomImage ? (
            hasLocalImage ? (
              // 本地图片处理
              <Image
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                src={image}
                alt={displayImageAlt}
                inferSize={true}
                loading="lazy"
                format="webp"
                quality={20}
                fetchpriority="high"
                decoding="async"
                style={`width: ${compact ? "64x" : "64px"}; height: ${compact ? "64px" : "64px"};`}
              />
            ) : (
              // 外部图片URL处理
              <img
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                src={image as string}
                alt={displayImageAlt}
                loading="lazy"
                decoding="async"
                style={`width: ${compact ? "64x" : "64px"}; height: ${compact ? "64px" : "64px"};`}
              />
            )
          ) : (
            <PlaceholderImage
              title={title}
              className="w-full h-full rounded-[18px]"
            />
          )}
        </div>
      )
    }

    <!-- 右侧内容 -->
    <div class="flex-1 min-w-0">
      <!-- 文章标题 -->
      <h4
        class={`text-txt-light dark:text-darkmode-txt-light line-clamp-2 leading-tight mb-1 ${compact ? "text-sm" : "text-base"}`}
      >
        {title}
      </h4>

      <!-- 元信息：日期和阅读时间 -->
      <div
        class={`flex items-center gap-2 text-gray-500 dark:text-gray-300 ${compact ? "text-xs" : "text-sm"}`}
      >
        <!-- 发布日期 -->
        {
          entryDate && (
            <span class="flex items-center gap-1">
              <svg
                class="w-3 h-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                />
              </svg>
              {entryDate}
            </span>
          )
        }

        <!-- 分隔符 -->
        {
          entryDate && showReadingTime && (
            <span class="text-gray-300 dark:text-gray-600">•</span>
          )
        }

        <!-- 阅读时间 -->
        {
          showReadingTime && (
            <span class="flex items-center gap-1">
              <svg
                class="w-3 h-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              {estimatedReadingTime}
            </span>
          )
        }
      </div>
    </div>
  </a>
</div>

<style>
  /* 确保链接样式重置 */
  a {
    text-decoration: none;
    color: inherit;
  }

  a:hover {
    text-decoration: none;
  }

  /* 文本截断样式 */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>


